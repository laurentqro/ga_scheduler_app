<p id="notice"><%= notice %></p>

<p>
  <b>First name:</b>
  <%= @user.first_name %>
</p>

<p>
  <b>Last name:</b>
  <%= @user.last_name %>
</p>

<p>
  <b>Email:</b>
  <%= @user.email %>
</p>

<p>
  <b>Role(s):</b>
  <% @user.roles.each do |role| %>
  <%= role.name %>
  <% end %>
</p>

<%= link_to 'Edit', edit_user_path(@user), class: "btn btn-primary" %>

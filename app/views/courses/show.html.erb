<p id="notice"><%= notice %></p>

<% if can? :edit, Course %>
  <%= link_to 'Edit', edit_course_path(@course), class: "btn btn-primary" %>
<% end %>

<div class="page-header">
  <h1><%= @course.name %></h1>
</div>

<p><%= @course.start_date %></p>
<p><%= @course.end_date %></p>
<p><%= @course.time_slot.name %></p>

<p class="lead"><%= @course.description %></p>

<p>Classroom : <%= @course.classroom.name %></p>

<h2>Instructors</h2>

<% @course.users.each do |user| %>
<li><%= user.to_s %></li>
<% end %>
